</head>

<body>

  <!-- ======= Top Bar ======= -->
  <div id="topbar" class="d-flex align-items-center fixed-top">
    <div class="container d-flex justify-content-between">
      <div class="contact-info d-flex align-items-center">
        <i class="bi bi-envelope"></i> <a href="mailto:medihub@gmail.com">medihub@example.com</a>
        <i class="bi bi-phone"></i> +91 9347694180
      </div>
      <div class="d-none d-lg-flex social-links align-items-center">
        <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
        <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
        <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
        <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></i></a>
      </div>
    </div>
  </div>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">

      <h1 class="logo me-auto"><a href="/home">MEDIHUB</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav id="navbar" class="navbar order-last order-lg-0">
        <ul>
          <li><a class="nav-link scrollto active" href="/home">Home</a></li>
          <!-- <li><a class="nav-link scrollto" href="#about">About</a></li> -->
          <li><a class="nav-link scrollto" href="#services">Services</a></li>
          <li><a class="nav-link scrollto" href="#departments">Departments</a></li>
          <li><a class="nav-link scrollto" href="#doctors">Doctors</a></li>
          <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
          <li class="dropdown"><a href="#"><span>Services</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="/bookappointment">Book an appointment</a></li>
              <li><a href="/bookedappointments">Booked appointments</a></li>
              <li><a href="/bookedappointments">Cancel appointment </a></li>
              <li><a href="/booktest">Book tests</a></li>
              <li><a href="/ordermed">Order medicines</a></li>
            </ul>
          </li>
          <li><a class="nav-link scrollto" href="/logout" role="button">Log Out</a></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

      <a href="/bookappointment" class="appointment-btn scrollto"><span class="d-none d-md-inline">Make an</span> Appointment</a>

    </div>
  </header>

<section id="appointment" class="appointment section-bg">
    <div class="container">

      <div class="section-title">
        <h2>Booked Appointments</h2>
      </div>
      <div class="section-title">
        <h2>Booked Appointments</h2>
      </div> 

    <% users.forEach(function(User){ %>
        <% if(User.username === usermail){ %>
      <% if( User.appointment.length > 0){ %>
        <div class="container mt-5 mb-5">
        <div class="row mt-1">
          <% for (var i = 0; i< User.appointment.length; i++) { %>
              <div class="col-md-3">
                  <div class="p-card bg-white p-2 rounded px-3">
                      <div class="d-flex align-items-center credits"><img src="https://i.imgur.com/hlz6G90.png" width="16px"><span class="text-black-50 ml-2" name="appointmentid">Appointment</span></div>
                      <h4 style="color:#2c4964" class="mt-2">Appointment Details</h4>
                      <span style="color:#2c4964" class="d-block mt-2 mb-5"> 
                      Patient Name: <span style="color:#1977cc"> <%= User.appointment[i].name %> </span> <br>
                      Hospital Name: <span style="color:#1977cc"> <%= User.appointment[i].Hospital %> </span> <br>
                      Doctor Name:<span style="color:#1977cc"> <%= User.appointment[i].Doctor %> </span>  <br>
                      Date:<span style="color:#1977cc"> <%= User.appointment[i].Date %> </span> <br>
                      Time:<span style="color:#1977cc"> <%= User.appointment[i].time %> </span>
                    </span>
                      <div
                          class="d-flex justify-content-between stats">
                          <div><i class="fa fa-calendar-o"></i><span class="ml-2">1 days ago</span></div>
                          <div class="d-flex flex-row align-items-center">
                              <a href="/delete" role="button" style="border:none; font-size:15px"  class="badge">Cancel</a></div>
                  </div>
              </div>
          </div>
          <%  }; %>
        </div>
      </div>
          <% } else{ %>
            <div class="col-xl-7 col-lg-6 icon-boxes d-flex flex-column align-items-stretch justify-content-center py-5 px-lg-5">
              <h3>you haven't booked any appointments lately.</h3>
              <h4 class="title"><a href="/bookappointment">Book Your First Appointment Here</a></h4>
            </div>
          <%  } %>




          <div class="section-title">
            <h2>Booked Tests</h2>
          </div> 

          <% if( User.test.length > 0){ %>
            <div class="container mt-5 mb-5">
            <div class="row mt-1">
              <% for (var i = 0; i< User.test.length; i++) { %>
                  <div class="col-md-3">
                      <div class="p-card bg-white p-2 rounded px-3">
                          <div class="d-flex align-items-center credits"><img src="https://i.imgur.com/hlz6G90.png" width="16px"><span class="text-black-50 ml-2" name="appointmentid">Test</span></div>
                          <h4 style="color:#2c4964" class="mt-2">Test Details</h4>
                          <span style="color:#2c4964" class="d-block mt-2 mb-5"> 
                          Patient Name: <span style="color:#1977cc"> <%= User.test[i].name %> </span> <br>
                          Hospital Name: <span style="color:#1977cc"> <%= User.test[i].Hospital %> </span> <br>
                          Test Type:<span style="color:#1977cc"> <%= User.test[i].Testtype %> </span>  <br>
                          Date:<span style="color:#1977cc"> <%= User.test[i].Date %> </span> <br>
                          Time:<span style="color:#1977cc"> <%= User.test[i].time %> </span>
                        </span>
                          <div
                              class="d-flex justify-content-between stats">
                              <div><i class="fa fa-calendar-o"></i><span class="ml-2">1 days ago</span></div>
                              <div class="d-flex flex-row align-items-center">
                                  <a href="/delete" role="button" style="border:none; font-size:15px"  class="badge">Cancel</a></div>
                      </div>
                  </div>
              </div>
              <%  }; %>
            </div>
          </div>
              <% } else{ %>
                <div class="col-xl-7 col-lg-6 icon-boxes d-flex flex-column align-items-stretch justify-content-center py-5 px-lg-5">
                  <h3>you haven't booked any tests lately.</h3>
                  <h4 class="title"><a href="/booktest">Book Your First Test Here</a></h4>
                </div>
              <%  } %>



              
          <div class="section-title">
            <h2>Booked Medicines</h2>
          </div> 

          <% if( User.med.length > 0){ %>
            <div class="container mt-5 mb-5">
            <div class="row mt-1">
              <% for (var i = 0; i< User.med.length; i++) { %>
                  <div class="col-md-3">
                      <div class="p-card bg-white p-2 rounded px-3">
                          <div class="d-flex align-items-center credits"><img src="https://i.imgur.com/hlz6G90.png" width="16px"><span class="text-black-50 ml-2" name="appointmentid">Test</span></div>
                          <h4 style="color:#2c4964" class="mt-2">Test Details</h4>
                          <span style="color:#2c4964" class="d-block mt-2 mb-5"> 
                          Name: <span style="color:#1977cc"> <%= User.med[i].name %> </span> <br>
                          Phone: <span style="color:#1977cc"> <%= User.med[i].phone %> </span> <br>
                          pharmacy:<span style="color:#1977cc"> <%= User.med[i].hospital %> </span>  <br>
                          Medicines:<span style="color:#1977cc"> <%= User.med[i].medicines %> </span>  <br>
                          address:<span style="color:#1977cc"> <%= User.med[i].address %> </span>
                        </span>
                          <div
                              class="d-flex justify-content-between stats"> 
                              <div><i class="fa fa-calendar-o"></i><span class="ml-2">1 days ago</span></div>
                              <div class="d-flex flex-row align-items-center">
                                  <a href="/delete" name="" role="button" style="border:none; font-size:15px"  class="badge">Cancel</a></div>
                      </div>
                  </div>
              </div>
              <%  }; %>
            </div>
          </div>
              <% } else{ %>
                <div class="col-xl-7 col-lg-6 icon-boxes d-flex flex-column align-items-stretch justify-content-center py-5 px-lg-5">
                  <h3>you haven't booked any medicines lately.</h3>
                  <h4 class="title"><a href="/ordermed">Book Your Medicines Here</a></h4>
                </div>
              <%  } %>
              <%  } %>
              <% }); %>










    </div>
  </section>
  <!-- End Appointment Section -->



